<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background_layout"
    android:orientation="vertical"
    tools:context=".GREGeneralExamPatternActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


                <TextView
                    android:id="@+id/gre_general_sections_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/nexa_light"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:text="@string/gre_general_sections_overview"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/gre_general_awa_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="@font/nexa_light"
                        android:text="@string/gre_general_awa_title"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/gre_general_awa_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nexa_light"
                        android:text="@string/gre_general_awa_overview"/>

                    <TextView
                        android:id="@+id/gre_general_awa_learn_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nexa_bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/gre_general_awa_learn_more"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="10dp">

                <TextView
                        android:id="@+id/gre_general_verbal_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="@font/nexa_light"
                    android:layout_marginBottom="10dp"
                        android:text="@string/gre_general_verbal_title"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/gre_general_verbal_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nexa_light"
                        android:text="@string/gre_general_verbal_overview"/>

                    <TextView
                        android:id="@+id/gre_general_verbal_learn_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nexa_bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/gre_general_verbal_learn_more"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/gre_general_quant_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="@font/nexa_light"
                        android:layout_marginBottom="10dp"
                        android:text="@string/gre_general_quant_title"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/gre_general_quant_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nexa_light"
                        android:text="@string/gre_general_quant_overview"/>

                    <TextView
                        android:id="@+id/gre_general_quant_learn_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nexa_bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/gre_general_quant_learn_more"/>

                </LinearLayout>


    </LinearLayout>

</ScrollView>